# Railway Environment Variables Template
# Copy these to Railway Dashboard â†’ Variables tab
# DO NOT commit this file with real values!

# ============================================
# REQUIRED: LLM Configuration (OpenRouter)
# ============================================
LLM_PROVIDER=openrouter
LLM_MODEL=anthropic/claude-sonnet-4
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxx

# Optional: OpenRouter tracking
OPENROUTER_SITE_URL=https://your-app.railway.app
OPENROUTER_SITE_NAME=Market Research Bot

# ============================================
# REQUIRED: Valyu API for Web Research
# ============================================
VALYU_API_KEY=your_valyu_api_key_here

# ============================================
# REQUIRED: Research Configuration
# ============================================
MAX_WEB_RESEARCH_LOOPS=10
FETCH_FULL_PAGE=True
INCLUDE_RAW_CONTENT=True

# ============================================
# REQUIRED: Activity Generation
# ============================================
ENABLE_ACTIVITY_GENERATION=true
ACTIVITY_VERBOSITY=medium
ACTIVITY_LLM_PROVIDER=openrouter
ACTIVITY_LLM_MODEL=anthropic/claude-sonnet-4

# ============================================
# REQUIRED: Tally Form Integration
# ============================================
# Get from Tally form webhook settings
TALLY_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# ============================================
# REQUIRED: Slack Integration
# ============================================
# Create app at https://api.slack.com/apps
# Required scopes: chat:write, files:write, channels:read
SLACK_BOT_TOKEN=xoxb-xxxxxxxxxxxxx-xxxxxxxxxxxxx-xxxxxxxxxxxxxxxxxxxxxxxx
SLACK_DEFAULT_CHANNEL=#marketing-research

# ============================================
# OPTIONAL: LangSmith Tracing (for debugging)
# ============================================
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=
LANGCHAIN_ENDPOINT=
LANGCHAIN_PROJECT=

# ============================================
# Railway automatically provides these:
# ============================================
# PORT (set by Railway, usually 8000)
# RAILWAY_ENVIRONMENT (production, staging, etc.)
# RAILWAY_PROJECT_ID
# RAILWAY_SERVICE_ID
