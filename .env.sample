# ============================================
# MARKET RESEARCH BOT - MINIMAL CONFIGURATION
# ============================================
# This configuration is optimized for the marketPrompt.md use case
# - Uses Claude Sonnet 4.5 via OpenRouter (unified API gateway)
# - Uses Valyu tools for web research (valyu_search, valyu_extract_content)
# - PDF generation handled by backend API (no frontend)
# - Tally form integration via webhook

# ============================================
# REQUIRED: Main LLM Configuration
# ============================================
# Using OpenRouter (unified gateway for all LLM providers)
LLM_PROVIDER=openrouter
LLM_MODEL=anthropic/claude-sonnet-4

# Alternative: Use Anthropic directly
# LLM_PROVIDER=anthropic
# LLM_MODEL=claude-sonnet-4

# ============================================
# REQUIRED: API Keys
# ============================================
# OpenRouter API Key (for Claude Sonnet 4.5 and other models)
# Get your key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=""

# Optional: For OpenRouter leaderboard tracking
OPENROUTER_SITE_URL=""
OPENROUTER_SITE_NAME=""

# Alternative: Anthropic Direct API (if not using OpenRouter)
ANTHROPIC_API_KEY=""

# Valyu API for web research (valyu_search and valyu_extract_content tools)
# Required for marketPrompt.md research requirements
VALYU_API_KEY=""

# ============================================
# REQUIRED: Research Configuration
# ============================================
# Maximum number of research loops (for comprehensive market research)
MAX_WEB_RESEARCH_LOOPS=10

# Fetch full page content for deeper analysis
FETCH_FULL_PAGE=True

# Include raw content in search results
INCLUDE_RAW_CONTENT=True

# ============================================
# OPTIONAL: Activity Generation
# ============================================
# Show detailed progress during research
ENABLE_ACTIVITY_GENERATION=true
ACTIVITY_VERBOSITY=medium
ACTIVITY_LLM_PROVIDER=anthropic
ACTIVITY_LLM_MODEL=claude-sonnet-4

# ============================================
# OPTIONAL: LangSmith Tracing (for debugging)
# ============================================
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=""
LANGCHAIN_ENDPOINT=""
LANGCHAIN_PROJECT=""

# ============================================
# REQUIRED: Slack Integration
# ============================================
# Slack Bot Token for posting messages and uploading files
# Create a Slack app at https://api.slack.com/apps
# Required scopes: chat:write, files:write, channels:read
SLACK_BOT_TOKEN=""

# Default Slack channel for workflow notifications
# Format: #channel-name or channel-id
SLACK_DEFAULT_CHANNEL="#marketing-research"